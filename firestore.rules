
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }
    
    function hasClaim(claim) {
      return isSignedIn() && request.auth.token[claim] == true;
    }

    match /patrons/{patronId} {
      allow read, write: if isOwner(patronId);
    }
    
    // This rule allows any signed-in user to read the entire collection,
    // which is necessary for the queue/history queries to work.
    match /song_requests/{songRequestId} {
      allow read: if isSignedIn();
      allow create: if isSignedIn() && request.resource.data.patronId == request.auth.uid;
      allow update, delete: if hasClaim('kj');
    }

    match /artists/{artistId} {
      allow read: if true;
      allow write: if hasClaim('kj');

      match /songs/{songId} {
          allow read: if true;
          allow write: if hasClaim('kj');
      }
    }
    
    match /reviews/{reviewId} {
        allow read: if true;
        allow create: if isSignedIn();
        allow update, delete: if false; 
    }

    match /tips/{tipId} {
        allow read: if hasClaim('kj');
        allow create: if isSignedIn();
        allow update, delete: if false;
    }
  }
}
