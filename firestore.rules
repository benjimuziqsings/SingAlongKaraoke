
/**
 * @fileoverview Firestore Security Rules for the Karaoke Queue Management App.
 * Version 3: Production-ready rules for a single KJ.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Checks if the user is signed in.
     */
    function isSignedIn() {
      return request.auth != null;
    }

    /**
     * @description Checks if the authenticated user's UID matches the provided userId.
     * @param {string} userId - The user ID to compare against the authenticated user's UID.
     * @return {bool} True if the user is signed in and the UID matches, false otherwise.
     */
    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    // Patrons can only read and write their own profile.
    match /patrons/{patronId} {
      allow read, write: if isOwner(patronId);
    }
    
    // Rules for the song_requests collection
    match /song_requests/{songRequestId} {
      // Any signed-in user can read an individual song request.
      allow read: if isSignedIn();

      // Patrons can create their own requests.
      allow create: if isSignedIn() && isOwner(request.resource.data.patronId);

      // Any signed-in user (acting as KJ) can update or delete any request.
      allow update, delete: if isSignedIn();

      // The song queue list can be read by any signed-in user.
      // This is a collection-level rule.
      allow list: if isSignedIn();
    }

    // Catalog can be read by anyone.
    // Catalog can be written to by any signed-in user (the KJ).
    match /artists/{artistId} {
      allow read: if true;
      allow write: if isSignedIn();

      match /songs/{songId} {
          allow read: if true;
          allow write: if isSignedIn();
      }
    }
    
    // Reviews can be read by anyone.
    // Reviews can only be created by signed-in users.
    match /reviews/{reviewId} {
        allow read: if true;
        allow create: if isSignedIn();
        allow update, delete: if false; // Reviews are immutable
    }
  }
}
