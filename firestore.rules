
/**
 * @fileoverview Firestore Security Rules for the Karaoke Queue Management App.
 * Version 4: Production-ready rules with KJ role.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Checks if the user is signed in.
     */
    function isSignedIn() {
      return request.auth != null;
    }

    /**
     * @description Checks if the authenticated user's UID matches the provided userId.
     * @param {string} userId - The user ID to compare against the authenticated user's UID.
     * @return {bool} True if the user is signed in and the UID matches, false otherwise.
     */
    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    /**
     * @description Checks if the user is a Karaoke Jockey (KJ).
     * This relies on a custom claim being set on the user's auth token.
     */
    function isKJ() {
      return isSignedIn() && request.auth.token.kj == true;
    }

    // Patrons can only read and write their own profile.
    match /patrons/{patronId} {
      allow read, write: if isOwner(patronId);
    }
    
    // The song queue can be read by any signed-in user.
    // Patrons can create their own requests.
    // Patrons can only update/delete their *own* requests.
    // The KJ can update/delete *any* request.
    match /song_requests/{songRequestId} {
        allow read: if isSignedIn();
        allow create: if isSignedIn() && isOwner(request.resource.data.patronId);
        allow update, delete: if isOwner(resource.data.patronId) || isKJ();
    }

    // Catalog can be read by anyone.
    // Catalog can only be written to by a KJ.
    match /artists/{artistId} {
      allow read: if true;
      allow write: if isKJ(); 
    }

    match /artists/{artistId}/songs/{songId} {
        allow read: if true;
        allow write: if isKJ();
    }
    
    // Reviews can be read by anyone.
    // Reviews can only be created by signed-in users.
    match /reviews/{reviewId} {
        allow read: if true;
        allow create: if isSignedIn();
        allow update, delete: if false; // Reviews are immutable
    }
  }
}
